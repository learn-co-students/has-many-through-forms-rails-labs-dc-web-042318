<%= @post.title %><br/>
<%= @post.content%><br/>

<% @post.users.uniq.each do |user| %>
  <%= link_to(user.username, user) %>
<% end %>

<%@post.comments.each do |comment| %>
  <%= "#{comment.user.username} says: #{comment.content}" %>
<% end %>

<% @post.categories.each do |category| %>
  <%= category.name %> <br/>
<% end %>

<%= render 'comment', comment: Comment.new %>
